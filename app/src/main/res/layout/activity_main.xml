<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/LinearLayout"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_c"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/clear"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_openBracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/specialCharacters"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="("
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_closeBracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/specialCharacters"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"

                android:text=")"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mul"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/mathematicalSign"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="X"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ac"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/clear"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_root"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/specialCharacters"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="âˆš "
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_percentage"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/specialCharacters"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"

                android:text="%"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_divide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/mathematicalSign"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/digits"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"

                android:text="9"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/mathematicalSign"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/digits"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"

                android:text="6"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/mathematicalSign"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/digits"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"

                android:text="3"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_equal"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/equalTo"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="="
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/digits"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="."
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"

                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backspace"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:elevation="200dp"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="Del"
                android:textColor="#E80000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_dev"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/equalTo"
                android:clickable="false"
                android:elevation="200dp"
                android:enabled="false"
                android:shadowRadius="@integer/material_motion_duration_long_2"
                android:text="dev"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:cornerRadius="100dp"

                />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>